{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-center mb-5">Bienvenue sur mon blog !</h1>

    <div class="row justify-content-center">
        <h2 class="articleOfTheMonth badge badge-primary">Article of the month</h2>
    </div>

        <div class="card my-4">
            <h5 class="card-header">{{ article.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">Category : {{ category.name }}</h5>
                <p class="card-text">{{ article.content }}</p>
            </div>
            <div class="card-footer">
                {% for tag in article.tags %}
                    <a href="{{ path('article_showByTag', {'name': tag.name}) }}" class="badge badge-pill badge-danger">{{ tag.name }}</a>

                {% else %}
                    <p class="text-danger m-0">No tags</p>
                {% endfor %}
            </div>
        </div>

{% endblock %}