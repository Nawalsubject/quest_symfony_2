{% extends 'base.html.twig' %}

{% block title %}{{ tag.name }}{% endblock %}

{% block body %}

    <h1 class="mb-4">In <span class="badge badge-pill badge-danger">{{ tag.name }}</span> tag</h1>

    <p class="text-center my-5"> Other tags :
        {% for tag in tags %}
            <a class="tags badge badge-pill badge-danger" href="{{ path('article_showByTag', {'name': tag.name}) }}">
                {{ tag.name }}
            </a>
        {% endfor %}
    </p>

    {% for article in articles %}
        <a href="{{ path('article_show', {'id': article.id}) }}">
            <div class="card my-2">
                <h5 class="card-header">{{ article.title }}</h5>
                <div class="card-body">
                    <p class="card-text">{{ article.content }}</p>
                </div>
                <div class="card-footer text-muted">{{ article.category.name }}</div>
            </div>
        </a>
    {% endfor %}

    <a href="{{ path('app_index') }}">
        <button type="button" class="btn btn-primary">Back to homepage.</button>
    </a>

{% endblock %}