{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}


    <div class="row justify-content-center text-center">
        <h1 class="mb-4 col-12">Article index</h1>
        <a class="col-6 btn btn-primary mb-4" href="{{ path('article_new') }}">Create new</a>
    </div>

    <table class="table table-responsive table-hover text-dark">
        <thead class="bg-danger">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Content</th>
            <th>Tags</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.slug }}</td>
                <td>{{ article.content }}</td>
                <td>
                    <ul>
                        {% for tag in article.tags %}
                            <li>{{ tag.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <a class="btn btn-outline-primary mb-1"
                       href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a class="btn btn-outline-primary mb-1"
                       href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
