{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}

    <h1 class="mb-4">In {{ category.name }} category</h1>

    {% for article in category.articles %}
        <div class="card my-4">
            <h5 class="card-header">{{ loop.index }} / {{ article.title }}</h5>
            <div class="card-body">
                <p class="card-text">{{ article.content }}</p>
            </div>
            <div class="card-footer">
                {% for tag in article.tags %}
                    <a href="{{ path('article_showByTag', {'name': article.tag.name}) }}" class="badge badge-pill badge-danger">{{ article.tag.name }}</a>

                {% else %}
                    <p class="text-danger m-0">No tags</p>
                {% endfor %}
            </div>
        </div>
    {% else %}
        Aucun article trouv√©.
    {% endfor %}

    <div class="row">

    <div class="col-12 my-2">
        <a href="{{ path('app_index') }}"><button type="button" class="btn btn-primary">Back to homepage.</button></a>
    </div>

{% endblock %}